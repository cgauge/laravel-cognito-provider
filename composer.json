{
  "name": "customergauge/cognito",
  "description": "AWS Cognito provider for Laravel Authentication",
  "type": "library",
  "license": "MIT",
  "keywords": ["laravel", "cognito", "aws", "authentication"],
  "authors": [
    {
      "name": "Marco Deleu",
      "email": "deleugyn@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "ext-gmp": "*",
    "ext-json": "*",
    "web-token/jwt-library": "^3.0",
    "illuminate/contracts": ">=7.1"
  },
  "require-dev": {
    "illuminate/cache": ">=7.1",
    "illuminate/config": ">=7.1",
    "illuminate/container": ">=7.1",
    "phpunit/phpunit": "^10.0",
    "doctrine/coding-standard": "^12.0",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "CustomerGauge\\Cognito\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\CustomerGauge\\Cognito\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "CustomerGauge\\Cognito\\LaravelCognitoServiceProvider"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
